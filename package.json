{
  "name": "@appservice-observability/mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Azure App Service observability and log analysis",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "appservice-observability-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:http": "HTTP_MODE=true tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "azure",
    "app-service",
    "logs",
    "observability",
    "debugging"
  ],
  "author": "Jordan Selig <seligj95@github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seligj95/app-service-observability-agent.git"
  },
  "homepage": "https://github.com/seligj95/app-service-observability-agent#readme",
  "bugs": {
    "url": "https://github.com/seligj95/app-service-observability-agent/issues"
  },
  "dependencies": {
    "@azure/arm-appservice": "^15.0.0",
    "@azure/arm-monitor": "^7.0.0",
    "@azure/identity": "^4.0.0",
    "@azure/monitor-query": "^1.2.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
